---

<Layout title="web-knobs">
	<section>
		<article>
			<h1>Welcome to web-knobs<span style="font-size:12px">v{pkg.version}</span></h1>

			<p>Cross-framework audio component library!</p>
		</article>

		<div style="display:flex;flex-wrap:wrap;max-width:384px;justify-content:center">
			{
				logos.map(([logo, color]) => {
					const transformed = logo
						.replace('role="img"', 'width=72   height=72  ')
						.replace('<path', '<path transform="translate(12 12) scale(0.5) translate(-12 -12)"')
						.replace(
							'svg">',
							'svg" stroke-linecap="round" stroke-linejoin="round" fill="currentColor"><circle cx="12" cy="12" r="10" fill="#333" /><path d="" fill="none" stroke-width=1 stroke="#555"/><path d="" fill="none" stroke-width=2 stroke="currentColor"/>'
						);

					return <div class="showcase-knob" style={`color:#${color}`} set:html={transformed} />;
				})
			}
		</div>
	</section>

	<hr />
	<section>
		<h3>Getting started</h3>
		<Code
			tabs={[
				{ name: 'npm', code: 'npm i @eyewave/web-knobs', lang: 'shell' },
				{ name: 'yarn', code: 'yarn add @eyewave/web-knobs', lang: 'shell' },
				{ name: 'pnpm', code: 'pnpm add @eyewave/web-knobs', lang: 'shell' },
				{ name: 'bun', code: 'bun add @eyewave/web-knobs', lang: 'shell' }
			]}
		/>
	</section>

	<hr />

	<section>
		<h3>Examples</h3>

		{
			examples.map((e) => {
				const Comp = e.comp;
				const lines = e.description.split('\n');

				const frameworks = ['html + ts', 'svelte', 'react'];
				const languages: CodeLanguage[] = ['html', 'svelte', 'tsx'];

				return (
					<article>
						<h3>{e.name}</h3>
						{lines.map((line) => (
							<p set:html={line} />
						))}

						<div>
							<div style="width:100%;margin:18px 0">
								<Comp />
							</div>
							<Code
								tabs={e.code.map((code, i) => ({ code, name: frameworks[i], lang: languages[i] }))}
							/>
						</div>
					</article>
				);
			})
		}
	</section>
</Layout>

<script>
	import { createDraggable, type DraggableApi } from '@eyewave/web-knobs/core/draggable';
	import { valueToAngle, describeArc } from '@eyewave/web-knobs/core/helpers';

	const knobElements = document.getElementsByClassName('showcase-knob');
	const knobs: DraggableApi[] = [];

	for (const el of knobElements) {
		const [arcFull, arc, logo] = el.querySelectorAll('svg path')!;
		const val = Math.random();

		arcFull?.setAttribute('d', describeArc(12, 12, 10, 1, -135, 135));

		draw(val);
		function draw(v: number) {
			const angle = valueToAngle(v, 0, 180);

			arc?.setAttribute('d', describeArc(12, 12, 10, v, -135, 135));
			logo?.setAttribute(
				'transform',
				`translate(12 12) scale(0.5) translate(-12 -12) rotate(${angle} 12 12)`
			);
		}

		const knob = createDraggable(el as HTMLElement, {
			value: val,
			onValueChange: draw
		});

		knobs.push(knob);
	}
</script>
