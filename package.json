{
	"name": "web-knobs",
	"description": "Component library for building customizable knob controls.",
	"version": "1.0.0-beta.1",
	"repository": {
		"url": "https://github.com/eye-wave/svelte-knobs"
	},
	"author": {
		"name": "_eyewave",
		"email": "89079979+eye-wave@users.noreply.github.com"
	},
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "bun test --coverage",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./params": {
			"types": "./dist/params.d.ts",
			"import": "./dist/params.js"
		}
	},
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"publint": "^0.2.12",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^5.4.21",
		"@types/bun": "latest"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
