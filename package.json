{
	"name": "@eyewave/web-knobs",
	"version": "0.0.7",
	"license": "MIT",
	"description": " Cross-framework component library for building audio software on the web.",
	"repository": {
		"url": "git+https://github.com/eye-wave/svelte-knobs.git"
	},
	"files": ["dist", "!dist/**/*.test.*", "!dist/**/*.spec.*", "**/*.d.ts"],
	"author": {
		"name": "_eyewave",
		"email": "89079979+eye-wave@users.noreply.github.com"
	},
	"type": "module",
	"workspaces": ["docs/"],
	"scripts": {
		"build": "rm dist -rf && bun run build:core && bun run build:wrappers",
		"build:core": "rolldown -c",
		"build:wrappers": "bun run src-build/main.ts",
		"format": "biome format --write",
		"lint": "biome lint"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^10.0.1",
		"@swc/core": "^1.15.11",
		"rolldown": "^1.0.0-rc.4",
		"unplugin-isolated-decl": "^0.15.7",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"react": "^19.2.0",
		"svelte": "^5.51.3",
		"typescript": "~5.9.3"
	},
	"exports": {
		"./core": {
			"default": "./dist/core/index.js",
			"browser": "./dist/core/index.js",
			"types": "./dist/core/index.d.ts"
		},
		"./core/params": {
			"default": "./dist/core/params.js",
			"types": "./dist/core/params.d.ts"
		},
		"./core/helpers": {
			"default": "./dist/core/helpers.js",
			"types": "./dist/core/helpers.d.ts"
		},
		"./core/draggable": {
			"default": "./dist/core/draggable.js",
			"types": "./dist/core/draggable.d.ts"
		},
		"./core/components/svg-knob": {
			"default": "./dist/core/components/svg-knob.js",
			"browser": "./dist/core/components/svg-knob.js",
			"types": "./dist/core/components/svg-knob.d.ts"
		},
		"./core/components/image-knob": {
			"default": "./dist/core/components/image-knob.js",
			"browser": "./dist/core/components/image-knob.js",
			"types": "./dist/core/components/image-knob.d.ts"
		},
		"./svelte": {
			"import": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js",
			"svelte": "./dist/svelte/index.js",
			"types": "./dist/svelte/index.d.ts"
		},
		"./react": {
			"import": "./dist/react/index.js",
			"default": "./dist/react/index.js",
			"react": "./dist/react/index.js",
			"types": "./dist/react/index.d.ts"
		}
	},
	"keywords": ["svelte", "react", "audio", "knobs"]
}
